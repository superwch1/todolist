<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="todolist.Views.ForgetPasswordView"
             Title="Forget Password">
    <StackLayout x:Name="stack" VerticalOptions="Center">
        <Label Text="Please enter your registered email." FontSize="16"     
                Margin="0, 0, 0, 15" />
                 
        <Border x:Name="emailBorder" Stroke="Black" StrokeShape="RoundRectangle 10">
            <Entry x:Name="email" Placeholder="abc@gmail.com"            
                    Keyboard="Email"  PlaceholderColor="#aeaeae" HorizontalOptions="Center"
                    TextColor="#aeaeae" FontSize="16"
                    IsTextPredictionEnabled="False" IsSpellCheckEnabled="False"
                    HorizontalTextAlignment="Center"/>
        </Border>
        <Button x:Name="button" Text="GO" BackgroundColor="#57472a" TextColor="#ffffff"
                FontAttributes="Bold" FontSize="18" Clicked="ForgetPassword"/>
    </StackLayout>
</ContentPage>