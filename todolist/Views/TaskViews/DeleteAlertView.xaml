<?xml version="1.0" encoding="utf-8" ?>
<mopups:PopupPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                  xmlns:mopups="clr-namespace:Mopups.Pages;assembly=Mopups"
                  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                  CloseWhenBackgroundIsClicked="False"
                  x:Class="todolist.Views.TaskViews.DeleteAlertView" BackgroundColor="#B0000000">
                  
    <Frame x:Name="viewFrame" VerticalOptions="Center" Margin="30" CornerRadius="20" BackgroundColor="#fefff5">
        <VerticalStackLayout Padding="0, 20, 0, 20" HorizontalOptions="Center">      
            <Label x:Name="label" FontSize="16"  />    

            <HorizontalStackLayout Margin="0, 20, 0, 0" HorizontalOptions="Center">
                    <Button x:Name="createOrUpdate" BorderColor="#57472a" CornerRadius ="10" WidthRequest="85" 
                            Text="Yes" BorderWidth="1" Clicked="Yes" BackgroundColor="#ffffff" TextColor="#57472a" FontSize="20"/>
                    <Button x:Name="cancel" BorderColor="#57472a" BorderWidth="1" CornerRadius="10" WidthRequest="85"
                            Margin="15, 0, 0, 0" Text="No" TextColor="#ffffff" FontSize="20"
                            BackgroundColor="#57472A" Clicked="No" />
                </HorizontalStackLayout>
        </VerticalStackLayout>
    </Frame>
</mopups:PopupPage>